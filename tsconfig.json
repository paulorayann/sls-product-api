{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
